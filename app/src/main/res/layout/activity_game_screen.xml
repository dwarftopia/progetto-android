<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameScreen">

    <LinearLayout
        android:id="@+id/layout_drawArea"
        android:layout_width="380dp"
        android:layout_height="650dp"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:id="@+id/layout_topArea"
            android:layout_width="380dp"
            android:layout_height="145dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFrog1"
                android:layout_width="250dp"
                android:layout_height="145dp"
                app:srcCompat="@drawable/frog1" />

            <LinearLayout
                android:id="@+id/layout_scoreArea"
                android:layout_width="130dp"
                android:layout_height="145dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblCountdown"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:background="@drawable/frame"
                    android:fontFamily="serif-monospace"
                    android:gravity="center_horizontal|center_vertical"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblSeparator"
                    android:layout_width="130dp"
                    android:layout_height="24dp"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/lblScore"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:background="@drawable/frame"
                    android:fontFamily="serif-monospace"
                    android:gravity="center_horizontal|center_vertical"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_spawnArea"
            android:layout_width="380dp"
            android:layout_height="500dp"
            android:background="@drawable/frame">

            <ImageView
                android:id="@+id/imgFrog2"
                android:layout_width="250dp"
                android:layout_height="71dp"
                app:srcCompat="@drawable/frog2" />

            <ImageView
                android:id="@+id/imgBug"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="199dp"
                android:layout_marginTop="417dp"
                android:layout_marginEnd="131dp"
                android:layout_marginBottom="34dp"
                app:srcCompat="@drawable/bug" />
        </RelativeLayout>


        <!--<com.example.progetto_android.DrawView
            android:id="@+id/DrawView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>-->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>